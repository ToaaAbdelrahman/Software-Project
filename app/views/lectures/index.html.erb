<% if !flash[:notice].blank? %>
  <div class="alert alert-info">
  <%= flash[:notice] %>
  </div>
<% end %>
<br />
<%= link_to "New Lecture", new_lecture_path, class: "btn btn-primary" %>
<br />
<br />
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Download Link</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @lectures.each do |lecture| %>
      <tr>
        <td><%= link_to lecture.name,lecture_path(lecture) %></td>
        <td><%= link_to "Download Lecture", lecture.attachment_url %></td>
        <td><%= button_to "Delete",  lecture, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{lecture.name}?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
